<%= form_for @project do |f| %>

 <% if @project.errors.any? %>
   <div id="error_explanation">
     <h2>
       <%= pluralize(@project.errors.count, "error") %> prohibited this user from being saved:
     </h2>
     <ul>
       <% @project.errors.full_messages.each do |msg| %>
         <li><%= msg %></li>
       <% end -%>
     </ul>
   </div>
 <% end -%>

 <div>
   <%= f.label :name %>
   <%= f.text_field :name %>
 </div>

 <div>
   <%= f.label :description %>
   <%= f.text_area :description %>
 </div>

 <div>
   <%= f.label :start_date %>
   <%= f.date_field :start_date %>
 </div>

 <div>
   <%= f.label :end_date %>
   <%= f.date_field :end_date %>
 </div>

 <div>
   <%= f.label :funding_goal %>
   <%= f.number_field :funding_goal %>
 </div>

 <h2>Add Rewards</h2>

 <div id="rewards">
   <%= f.fields_for :rewards do |reward_fields| %>
     <%= render 'reward_fields', f: reward_fields %>
   <% end -%>
   <div class="links">
     <%= link_to_add_association 'add reward', f, :rewards %>
   </div>
 </div>

 <%= f.submit %>
<% end -%>